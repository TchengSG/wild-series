{% extends 'base.html.twig' %}

            {# Voir toutes les catégories de la table catégorie : #}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table catégorie : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        <h2>Retour à l'accueil</h2>
    </a>
{% endblock %}
